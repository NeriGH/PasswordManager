<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PasswordManager.MainPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackLayout Grid.Row="0" BackgroundColor="#427AA1" Padding="10">
            <Label Text="PASSWORD MANAGER" TextColor="White" FontSize="28" HorizontalOptions="Center" FontAttributes="Bold" />
        </StackLayout>

        <ScrollView Grid.Row="1">
            <VerticalStackLayout Spacing="25" Padding="30,0" VerticalOptions="Center">

                <Image Source="dotnet_bot.png" SemanticProperties.Description="Cute dot net bot waving hi to you!" HeightRequest="200" HorizontalOptions="Center" />

                <Label Text="Welcome to your password manager!" SemanticProperties.HeadingLevel="Level1" FontSize="32" HorizontalOptions="Center" />

                <Label Text="Safely store and manage all of your passwords in one place." FontSize="18" HorizontalOptions="Center" />

                <Button Text="Get Started" FontSize="18" BackgroundColor="#427AA1" TextColor="White" Command="{Binding StartAppCommand}" HorizontalOptions="Center" />

            </VerticalStackLayout>
        </ScrollView>

    </Grid>

</ContentPage>
